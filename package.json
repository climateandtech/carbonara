{
  "name": "carbonara-monorepo",
  "version": "1.0.0",
  "description": "Multi-Editor Plugin Architecture with JSON-RPC for Carbonara",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/core-backend/typescript",
    "packages/rpc-client/js",
    "apps/*",
    "plugins/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "setup": "npm install && npm run build",
    "start:backend": "npm run start --workspace=packages/core-backend",
    "start:web": "npm run dev --workspace=apps/web-ui",
    "start:cli": "npm run start --workspace=packages/cli"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "playwright": "^1.55.1",
    "@playwright/test": {
      "playwright": "^1.55.1"
    }
  },
  "packageManager": "npm@11.6.1",
  "engines": {
    "node": ">=24.9.0",
    "npm": ">=11.6.0"
  },
  "license": "AGPL-3.0-or-later"
}
