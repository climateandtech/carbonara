{
  "name": "@carbonara/cli",
  "version": "0.1.0",
  "description": "Carbonara CLI tool for CO2 assessment and modular tool execution",
  "main": "dist/index.js",
  "bin": {
    "carbonara": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/schemas dist/registry && cp -r schemas/* dist/schemas/ && cp -r src/registry/* dist/registry/",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@carbonara/core": "0.1.0",
    "@inquirer/prompts": "^7.8.6",
    "chalk": "^4.1.2",
    "commander": "^14.0.1",
    "cypress": "^13.17.0",
    "execa": "^5.1.1",
    "js-yaml": "^4.1.0",
    "ora": "^6.3.1",
    "playwright": "^1.55.1",
    "zod": "^3.25.67"
  },
  "keywords": [
    "cli",
    "co2",
    "assessment",
    "greenframe",
    "sustainability"
  ],
  "author": "Carbonara team",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
