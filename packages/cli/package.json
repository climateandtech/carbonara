{
  "name": "@carbonara/cli",
  "version": "0.1.0",
  "description": "Carbonara CLI tool for CO2 assessment and modular tool execution",
  "main": "dist/index.js",
  "bin": {
    "carbonara": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/schemas && cp -r schemas/* dist/schemas/",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run --config ./vitest.config.ts",
    "test:ci": "CI=true vitest run --config ./vitest.config.ts",
    "test:megalinter": "vitest run --config ./vitest.config.ts test/megalinter.test.ts",
    "test:no-megalinter": "vitest run --config ./vitest.config.ts --exclude='**/megalinter.test.ts'",
    "test:watch": "vitest --config ./vitest.config.ts",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "cypress": "^15.2.0",
    "@inquirer/prompts": "^7.8.6",
    "js-yaml": "^4.1.0",
    "ora": "^9.0.0",
    "playwright": "^1.40.0",
    "sqlite3": "^5.1.7",
    "zod": "^4.0.15",
    "mega-linter-runner": "^8.8.0"
  },
  "keywords": [
    "cli",
    "co2",
    "assessment",
    "greenframe",
    "sustainability"
  ],
  "author": "",
  "license": "To be clarified - All rights reserved",
  "type": "module",
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-x64": "^4.18.0",
    "@rollup/rollup-linux-x64-gnu": "^4.18.0"
  }
}
