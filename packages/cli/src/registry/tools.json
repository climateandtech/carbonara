    {
      "id": "greenframe",
      "name": "GreenFrame",
      "description": "Measure the carbon footprint of web applications",
      "command": {
        "executable": "npx",
        "args": ["greenframe", "analyze", "{url}", "--format=json"],
        "outputFormat": "json"
      },
      "installation": {
        "type": "npm",
        "package": "@marmelab/greenframe-cli",
        "global": true,
        "instructions": "npm install -g @marmelab/greenframe-cli"
      },
      "detection": {
        "method": "command",
        "target": "npx greenframe --help"
      },
      "display": {
        "category": "Carbon Analysis",
        "icon": "üå±",
        "groupName": "GreenFrame Analysis",
        "entryTemplate": "üî¨ {url} - {date}",
        "descriptionTemplate": "{carbonTotal}g CO2",
        "fields": [
          {
            "key": "url",
            "label": "üåê URL",
            "path": "data.url",
            "type": "url"
          },
          {
            "key": "carbonTotal",
            "label": "üå± Carbon",
            "path": "data.results.carbon.total",
            "type": "carbon",
            "format": "{value}g CO2"
          },
          {
            "key": "score",
            "label": "üìä Score",
            "path": "data.results.score",
            "type": "number",
            "format": "{value}/100"
          },
          {
            "key": "loadTime",
            "label": "‚ö° Load Time",
            "path": "data.results.performance.loadTime",
            "type": "time",
            "format": "{value}ms"
          },
          {
            "key": "pageSize",
            "label": "üìä Page Size",
            "path": "data.results.performance.pageSize",
            "type": "number",
            "format": "{value}KB"
          }
        ]
      },
      "options": [
        {
          "flag": "-s, --save",
          "description": "Save results to data lake",
          "type": "boolean"
        },
        {
          "flag": "-o, --output <format>",
          "description": "Output format (json|table)",
          "type": "string",
          "default": "table"
        }
      ]
    },
