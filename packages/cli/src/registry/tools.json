    {
      "id": "if-webpage-scan",
      "name": "IF Webpage Scan",
      "description": "Impact Framework webpage analysis with carbon estimation using WebpageImpact and Co2js plugins",
      "command": {
        "executable": "if-run",
        "args": ["--manifest", "{manifest}", "--output", "{output}"],
        "outputFormat": "yaml"
      },
      "installation": {
        "type": "npm",
        "package": "@grnsft/if @tngtech/if-webpage-plugins",
        "global": true,
        "instructions": "npm install -g @grnsft/if && npm install -g @tngtech/if-webpage-plugins"
      },
      "detection": {
        "method": "command",
        "target": "npm list -g @tngtech/if-webpage-plugins && if-run --help"
      },
      "manifestTemplate": {
        "name": "webpage-carbon-scan",
        "description": "Webpage carbon impact analysis",
        "initialize": {
          "outputs": ["yaml"],
          "plugins": {
            "webpage-impact": {
              "method": "WebpageImpact",
              "path": "@tngtech/if-webpage-plugins",
              "config": {
                "scrollToBottom": "{scrollToBottom}",
                "url": "{url}"
              }
            },
            "co2js": {
              "method": "Co2js",
              "path": "@tngtech/if-webpage-plugins",
              "config": {
                "type": "swd",
                "version": 4
              }
            }
          }
        },
        "tree": {
          "children": {
            "child": {
              "pipeline": {
                "observe": ["webpage-impact"],
                "compute": ["co2js"]
              },
              "inputs": [{
                "options": {
                  "firstVisitPercentage": "{firstVisitPercentage}",
                  "returnVisitPercentage": "{returnVisitPercentage}"
                }
              }]
            }
          }
        }
      },
      "display": {
        "category": "Impact Analysis",
        "icon": "üåê",
        "groupName": "IF Webpage Analysis",
        "entryTemplate": "üåê {url} - {date}",
        "descriptionTemplate": "{carbon}g CO2, {energy} kWh",
        "fields": [
          {
            "key": "url",
            "label": "üåê URL",
            "path": "data.url",
            "type": "url"
          },
          {
            "key": "carbon",
            "label": "üå± CO2 Emissions",
            "path": "data.tree.children.child.outputs[0]['operational-carbon']",
            "type": "carbon",
            "format": "{value}g"
          },
          {
            "key": "energy",
            "label": "‚ö° Energy",
            "path": "data.tree.children.child.outputs[0]['energy']",
            "type": "energy",
            "format": "{value} kWh"
          },
          {
            "key": "networkBytes",
            "label": "üìä Data Transfer",
            "path": "data.tree.children.child.outputs[0]['network-bytes']",
            "type": "bytes",
            "format": "{value} KB"
          }
        ]
      },
      "options": [
        {
          "flag": "-s, --save",
          "description": "Save results to data lake",
          "type": "boolean"
        },
        {
          "flag": "-o, --output <format>",
          "description": "Output format (json|table)",
          "type": "string",
          "default": "table"
        },
        {
          "flag": "--scroll-to-bottom",
          "description": "Scroll to bottom of page during analysis",
          "type": "boolean",
          "default": false
        },
        {
          "flag": "--first-visit-percentage",
          "description": "First visit percentage (0-1)",
          "type": "number",
          "default": 0.9
        }
      ]
    },
