    {
      "id": "ecocode-java",
      "name": "EcoCode Java",
      "description": "SonarQube plugin for Java code sustainability analysis",
      "command": {
        "executable": "sonar-scanner",
        "args": ["-Dsonar.projectKey={projectKey}", "-Dsonar.sources={sources}", "-Dsonar.ecocode.enabled=true"],
        "outputFormat": "json"
      },
      "installation": {
        "type": "sonarqube-plugin",
        "package": "ecocode-java",
        "global": false,
        "instructions": "Install EcoCode Java plugin in SonarQube server and configure sonar-scanner"
      },
      "detection": {
        "method": "command",
        "target": "sonar-scanner --version"
      },
      "supportedLanguages": ["java"],
      "parsing": {
        "type": "config-driven",
        "config": {
          "findingsPath": "issues",
          "mappings": {
            "id": "key",
            "file": "component",
            "line": "line",
            "severity": "severity",
            "message": "message",
            "rule": "rule",
            "type": "type"
          },
          "severityMap": {
            "BLOCKER": "critical",
            "CRITICAL": "critical",
            "MAJOR": "high",
            "MINOR": "medium",
            "INFO": "low"
          },
          "categoryMap": {
            "ecocode:performance": "performance-critical",
            "ecocode:efficiency": "performance-critical",
            "ecocode:memory": "resource-optimization",
            "ecocode:resource": "resource-optimization",
            "ecocode:database": "data-efficiency",
            "ecocode:query": "data-efficiency",
            "ecocode:": "sustainability-patterns"
          },
          "defaultCategory": "sustainability-patterns"
        }
      },
      "display": {
        "category": "Code Sustainability",
        "icon": "üå±",
        "groupName": "EcoCode Analysis",
        "entryTemplate": "‚òï Java - {date}",
        "descriptionTemplate": "{issues} sustainability issues",
        "fields": [
          {
            "key": "issues",
            "label": "üå± Issues",
            "path": "data.issues.length",
            "type": "number"
          },
          {
            "key": "critical",
            "label": "üî¥ Critical",
            "path": "data.issues.filter(i => i.severity === 'CRITICAL').length",
            "type": "number"
          },
          {
            "key": "major",
            "label": "üü† Major",
            "path": "data.issues.filter(i => i.severity === 'MAJOR').length",
            "type": "number"
          }
        ]
      },
      "options": [
        {
          "flag": "-Dsonar.projectKey <key>",
          "description": "SonarQube project key",
          "type": "string",
          "required": true
        },
        {
          "flag": "-Dsonar.sources <path>",
          "description": "Source code path",
          "type": "string",
          "default": "."
        }
      ]
    },
