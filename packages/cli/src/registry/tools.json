{
  "tools": [
    {
      "id": "byte-counter",
      "name": "Carbonara Byte Counter",
      "description": "Built-in analyzer that counts bytes transferred and estimates CO2 emissions",
      "command": {
        "executable": "built-in",
        "args": [],
        "outputFormat": "json"
      },
      "installation": {
        "type": "built-in",
        "package": "built-in",
        "global": false,
        "instructions": "Built-in tool, no installation required"
      },
      "detection": {
        "method": "built-in",
        "target": "always-available"
      },
      "options": [
        {
          "flag": "-s, --save",
          "description": "Save results to data lake",
          "type": "boolean"
        },
        {
          "flag": "-o, --output <format>",
          "description": "Output format (json|table)",
          "type": "string",
          "default": "table"
        },
        {
          "flag": "--grid-intensity <value>",
          "description": "Grid carbon intensity (gCO2e/kWh)",
          "type": "number",
          "default": 473
        },
        {
          "flag": "--returning-visitor",
          "description": "Calculate for returning visitor (loads less data)",
          "type": "boolean"
        },
        {
          "flag": "--timeout <ms>",
          "description": "Page load timeout in milliseconds",
          "type": "number",
          "default": 30000
        }
      ]
    },
    {
      "id": "greenframe",
      "name": "GreenFrame",
      "description": "Measure the carbon footprint of web applications",
      "command": {
        "executable": "npx",
        "args": ["greenframe", "analyze", "{url}", "--format=json"],
        "outputFormat": "json"
      },
      "installation": {
        "type": "npm",
        "package": "@marmelab/greenframe-cli",
        "global": true,
        "instructions": "npm install -g @marmelab/greenframe-cli"
      },
      "detection": {
        "method": "command",
        "target": "npx greenframe --help"
      },
      "options": [
        {
          "flag": "-s, --save",
          "description": "Save results to data lake",
          "type": "boolean"
        },
        {
          "flag": "-o, --output <format>",
          "description": "Output format (json|table)",
          "type": "string",
          "default": "table"
        }
      ]
    },
    {
      "id": "impact-framework",
      "name": "Impact Framework",
      "description": "Green Software Foundation's impact measurement framework",
      "command": {
        "executable": "if-run",
        "args": ["--manifest", "{manifest}", "--output", "{output}"],
        "outputFormat": "yaml"
      },
      "installation": {
        "type": "npm",
        "package": "@grnsft/if @tngtech/if-webpage-plugins",
        "global": true,
        "instructions": "npm install -g @grnsft/if && npm install -g @tngtech/if-webpage-plugins"
      },
      "detection": {
        "method": "command",
        "target": "if-run --help"
      },
      "options": [
        {
          "flag": "-s, --save",
          "description": "Save results to data lake",
          "type": "boolean"
        },
        {
          "flag": "-o, --output <format>",
          "description": "Output format (json|table)",
          "type": "string",
          "default": "table"
        },
        {
          "flag": "--scroll-to-bottom",
          "description": "Scroll to bottom of page during analysis",
          "type": "boolean"
        }
      ]
    }
  ]
}