            "type": "url"
          },
          {
            "key": "energy",
            "label": "‚ö° Energy",
            "path": "data.results.energy",
            "type": "energy",
            "format": "{value} kWh"
          },
          {
            "key": "carbon",
            "label": "üå± Carbon",
            "path": "data.results.carbon",
            "type": "carbon",
